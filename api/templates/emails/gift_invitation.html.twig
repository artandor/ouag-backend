{% extends "base.html.twig" %}
{% block body %}
    <style>
        .text-center {
            text-align: center;
        }

        .code {
            padding: 15px;
            font-weight: bold;
            border: firebrick solid 1rem;
            background-color: lightgrey;
            width: 110px;
        }

        .blockquote {
            margin-bottom: 1rem;
            font-size: 1.25rem;
        }
    </style>
    <div>
        <h1 class="text-center">{% trans into locale %}Hey there{% endtrans %} {{ invite.receiverNickname }} !</h1>
        <p class="text-center">{{ creator_name }} {% trans into locale %}has a present for you{% endtrans %} !
        </p>
        {% if invite.comment %}
            <h3>{% trans into locale %}He even left you a message{% endtrans %} :</h3>
            <blockquote class="blockquote text-center">
                <p>{{ invite.comment }}</p>
            </blockquote>
        {% endif %}

        <h2 class="text-center">{% trans into locale %}How to retrieve your gift ?{% endtrans %}</h2>
        <div>
            <ol>
                <li>{% trans into locale %}Create an account with this email at{% endtrans %} <a
                        href="https://app.once-upon-a-gift.com/users/login" target="_blank" rel="noopener">app.once-upon-a-gift.com</a>
                </li>
                <li>{% trans into locale %}Go to the{% endtrans %} <a
                        href="https://app.once-upon-a-gift.com/gifts/received" target="_blank"
                        rel="noopener">{% trans into locale %}receive page{% endtrans %}</a> {% trans into locale %}to claim your gift{% endtrans %}
                </li>
                <li>{% trans into locale %}Click the{% endtrans %} <img
                        class="text-center"
                        src="{{ email.image('@images/gift-box.png') }}"
                        alt="Gift icon"> {% trans into locale %}gift icon and enter this code{% endtrans %}
                </li>
                <h2 class="code text-center">{{ invite.token }}</h2>
                <li>{% trans into locale %}Enjoy your gift ! And don't forget to say thank you to{% endtrans %}
                    <strong>{{ creator_name }}</strong></li>
            </ol>
        </div>
        <div>
            <h2>{% trans into locale %}Feedback / Bug{% endtrans %}</h2>
            <p>{% trans into locale %}If you encounter a bug or want to make a feedback, please do it at this <a
                    href="https://forms.gle/Wq78YawyCinQhsbE8">address</a>{% endtrans %}</p>
        </div>

    </div>
{% endblock %}
